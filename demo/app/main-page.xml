<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded">
  <ScrollView>

    <StackLayout>

      <Label text="Facebook login" class="title"/>
      <Button text="Login" tap="onLogin" />



      <Button text="Share Text" tap="onShare" />

      <Button text="Share Image" tap="onSharePhoto" />

      <Button text="Get Friends" tap="onFriends" />

      <Label text="{{ message }}" class="message" textWrap="true"/>

    </StackLayout>

  </ScrollView>
</Page>
